{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Open in QT Design Studio",
            "detail": "",
            "command": "qtdesignstudio",
            "type": "process",
            "isBackground": true,
            "args": [
                "${workspaceFolder}/helloWorld.pro"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "icon": {
                "id": "tools",
                "color": "terminal.ansiGreen"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "build-debug-x86-local"
            ]
        },
        {
            "label": "Open in QT Creator",
            "detail": "",
            "command": "qtcreator",
            "type": "process",
            "isBackground": true,
            "options": {
                "env": {
                    "QT_QPA_PLATFORM": "xcb"
                }
            },
            "args": [
                "${workspaceFolder}",
                "-settingspath",
                "${workspaceFolder}/.qt",
                "-theme",
                "dark"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "icon": {
                "id": "tools",
                "color": "terminal.ansiGreen"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "build-debug-x86-local"
            ]
        },
        {
            "label": "kill-redirect-qml-debugger",
            "detail": "",
            "command": "pkill",
            "type": "shell",
            "isBackground": true,
            "args": [
                "nc.traditional",
                "||",
                "true"
            ],
            "icon": {
                "id": "tools",
                "color": "terminal.ansiGreen"
            }
        },
        {
            "label": "redirect-qml-debugger",
            "detail": "",
            "command": "nc.traditional",
            "type": "shell",
            "isBackground": true,
            "args": [
                "-vv",
                "-l",
                "-p",
                "2233",
                "-c",
            "\"nc.traditional ${config:torizon_ip} 2233\""
            ],
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ],
            "icon": {
                "id": "tools",
                "color": "terminal.ansiGreen"
            }
        },
        {
            "label": "Start GDB Server Remote arm64",
            "command": "ssh",
            "type": "process",
            "args": [
                "-i",
                "${workspaceFolder}/.conf/id_rsa",
                "-p",
                "${config:torizon_debug_ssh_port}",
                "-o",
                "UserKnownHostsFile=/dev/null",
                "-o",
                "StrictHostKeyChecking=no",
                "torizon@${config:torizon_ip}",
                "cd ~/app && export QT_LOGGING_RULES=\"*.debug=true; qt.*.debug=false\" && gdbserver localhost:${config:torizon_debug_port2} helloWorld -qmljsdebugger=port:${config:torizon_debug_port3},block,services:DebugMessages,QmlDebugger,V8Debugger,QmlInspector,DebugTranslation"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "update-qt-ini-arm64",
                "kill-redirect-qml-debugger",
                "deploy-torizon-arm64",
                "redirect-qml-debugger"
            ],
            "problemMatcher": "$msCompile",
            "icon": {
                "id": "layers",
                "color": "terminal.ansiCyan"
            }
        },
